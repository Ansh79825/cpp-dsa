#include <iostream>
using namespace std;

int main() {
    int n;
    cout<<"enter the n";
    cin>>n;
    int i=1;
    while(i<=n){
        int j=1;
        while(j<=n-i+1){
            cout<<j;
            j++;
        }
        int k=0;
        while(k<2*i-2){
            cout<<"*";
            k++;
        }
        int m=n-i+1;
        while(m>=1){
            cout<<m;
            m--;
        }
        i++;
        cout<<endl;
    }
    
}
/*output
enter the n5
1234554321
1234**4321
123****321
12******21
1********1 */

